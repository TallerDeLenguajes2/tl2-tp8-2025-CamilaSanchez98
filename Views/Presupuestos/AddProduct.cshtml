@model Presupuesto
@{
    var productos = (List<Producto>)ViewBag.Productos;
}
<h2>Seleccione el producto a agregar:</h2>
<form asp-action="AddProduct" asp-route-idPresupuesto="@Model.idPresupuesto" method="post">

    <input type="hidden" name="idPresupuesto" value="@Model.idPresupuesto" />

    <div class="list-group">

        @foreach (var item in productos)
        {
            <label>
                <input type="radio" name="idProducto" value="@item.id" required />
                @item.descripcion
            </label>
        }

        <div class="mt-3">
            <label>Cantidad:</label>
            <input type="range"name="cantidad" min="1" max="20" value="1"
                oninput="this.nextElementSibling.value = this.value" /> <!-- esta linea y la de abajo hacen que el slider del rgo cambie mientras muevo el puntito-->
                <output>1</output>
        </div>


    </div>

    <button type="submit" class="btn btn-primary mt-4 w-100">Agregar Producto</button>
</form>