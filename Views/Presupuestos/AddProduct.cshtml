@model Presupuesto
@{
    var productos = (List<Producto>)ViewBag.Productos;
}

<style>
    .cantidad-container {
    visibility: hidden;
    height: 0;
    overflow: hidden;
}

.producto-option input[type="radio"]:checked ~ .cantidad-container {
    visibility: visible;
    height: auto;
}
</style>

<h2> NO ANDA AUN.....</h2>
<form asp-action="AddProduct" asp-route-idPresupuesto="@Model.idPresupuesto" method="post">

    <input type="hidden" name="idPresupuesto" value="@Model.idPresupuesto" />

    <div class="list-group">

        @foreach (var item in productos)
        {
            <label class="list-group-item producto-option">
                <input type="radio" class="form-check-input me-2"
                       name="idProducto" value="@item.id" required />

                <span class="fw-semibold">@item.descripcion</span>

                <div class="cantidad-container mt-3">

                    <label class="form-label">Cantidad:</label>

                    <div class="d-flex align-items-center">
                        <input type="range" class="form-range"
                               name="cantidad"
                               min="1" max="20" value="1"
                               oninput="this.nextElementSibling.value = this.value" />
                        <output class="ms-2">1</output>
                    </div>
                </div>
            </label>
        }

    </div>

    <button type="submit" class="btn btn-primary mt-4 w-100">Agregar Producto</button>
</form>