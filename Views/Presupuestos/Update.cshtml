@model DistribuidoraInsumosMVC.ViewModels.PresupuestoViewModel

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<h2>Editar Presupuesto</h2>

<form asp-action="Update"  asp-route-idPresupuesto="@Model.IdPresupuesto" method="post">

    <input type="hidden" asp-for="IdPresupuesto" />

    <div class="form-group">
        <label asp-for="NombreDestinatario"></label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion"></label>
        <input asp-for="FechaCreacion" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar Cambios</button>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}