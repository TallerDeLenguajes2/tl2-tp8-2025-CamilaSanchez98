@model Presupuesto

<table class="table table-striped mt-3 caption-top text-center align-middle">
    <caption>DETALLE DEL PRESUPUESTO #@Model.idPresupuesto</caption>
    <thead>
        <tr>
            <th rowspan="2">Codigo</th>
            <th rowspan="2">Fecha de creacion</th>
            <th rowspan="2">Nombre del destinatario</th>
            <th colspan="3">Productos</th>
        </tr>
        <tr>
            <th>Detalle</th>
            <th>Cantidad</th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.detalle != null && Model.detalle.Count > 0)
        {
            bool primeraFila = true;

            foreach (var item in Model.detalle)
            {
                <tr>
                    @if (primeraFila)
                    {
                        <td rowspan="@Model.detalle.Count">@Model.idPresupuesto</td>
                        <td rowspan="@Model.detalle.Count">@Model.fechaCreacion</td>
                        <td rowspan="@Model.detalle.Count">@Model.nombreDestinatario</td>
                        primeraFila = false;
                    }

                    <td>@item.producto.descripcion</td>
                    <td>@item.cantidad</td>
                    <td>
                        <a asp-controller="Productos" asp-action="Details" asp-route-idProducto="@item.producto.id" class="btn btn-primary">Ver</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No hay detalles cargados.</td></tr>
        }
    </tbody>
</table>
