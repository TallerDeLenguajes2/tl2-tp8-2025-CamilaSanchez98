@using DistribuidoraInsumosMVC.Models;
@model List<Producto>

<h2>Productos</h2>

<a asp-controller="Productos" asp-action="Create" class="btn btn-primary">Crear Producto</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var producto in Model)
    {
        <tr>
            <td>@producto.descripcion</td>
            <td>@producto.precio</td>
            <td>
                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.id" class="btn btn-warning">Editar</a>
                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
